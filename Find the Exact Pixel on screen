import pyautogui
import time

print("Move your mouse to the target location...")
time.sleep(3)  # Time to get ready

# Keep printing position until you stop the program
try:
    while True:
        x, y = pyautogui.position()
        print(f"X: {x} Y: {y}", end="\r")
        time.sleep(0.1)
except KeyboardInterrupt:
    print("\nDone.")
